<div>
    <div class="row">
        <div class="col-md-3">
            name: <input value="<%= menu.name %>" data-menu="<%= menu.id %>" name="name" class="form-control">
        </div>
        <div class="col-md-3">
            url: <input value="<%= menu.url %>" data-menu="<%= menu.id %>" name="url" class="form-control">
        </div>
        <div class="col-md-6">
            <button type="button" class="update btn btn-theme-ok">update</button>
            <button type="button" class="delete btn btn-theme-dark">delete</button>
            <button type="button" class="show-hide btn btn-theme-ok">show / hide children</button>
        </div>
    </div>
    <ul class="list row" data-menu="<%= menu.id %>">

    </ul>
    <hr style="border: 1px solid gray;"/>
    <div class="row">
        <div class="col-md-3">
        name: <input name="menu_name_new" data-menu="<%= menu.id %>" class="form-control">
        </div>
        <div class="col-md-3">
        url: <input name="menu_url_new" data-menu="<%= menu.id %>" class="form-control">
        </div>
        <div class="col-md-6">
        <button type="button" class="add-item btn btn-theme-ok">Add child menu item to [<span class="name" data-menu="<%= menu.id %>"><%= menu.name %></span>]</button>
        </div>
    </div>
    <hr style="border: 2px solid black;"/>
</div>